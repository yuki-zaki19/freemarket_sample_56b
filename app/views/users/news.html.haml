.main-box
  .main-box__header
    = render 'products/header'
  .main
    .main__user
      .user-info
        .info-tab
          = link_to 'お知らせ','/users/news',class: 'info-tab__btm active'
          = link_to 'やることリスト','/users/task',class: 'info-tab__btm'
        .info-content
          .info-content__details
            = link_to '#',class: 'info-content__details__news' do
              = image_tag "mercari_icon.png", class: 'info-content__details__news__icon', width: "48", height: "48"
              .info-content__details__news__com
                .info-content__details__news__com__text
                  《お買い物応援キャンペーン》1,000円の商品を"実質1円"で購入できます！
                .info-content__details__news__com__time
                  = fa_icon 'clock-o'
                  1時間
                = fa_icon 'angle-right icom'
    .main__user-bar
      .side-nav
        %ul.user-list
          %li.user-list__box
            = link_to '/users',class: 'user-list__box__btm' do
              マイページ
              = fa_icon 'angle-right side-bar'
          %li.user-list__box
            = link_to '/users/news',class: 'user-list__box__btm choice' do
              お知らせ
              = fa_icon 'angle-right side-bar'
          %li.user-list__box
            = link_to '/users/task',class: 'user-list__box__btm' do
              やることリスト
              = fa_icon 'angle-right side-bar'
          %li.user-list__box
            = link_to '#',class: 'user-list__box__btm' do
              出品する
              = fa_icon 'angle-right side-bar'
          %li.user-list__box
            = link_to '/users/exhibit',class: 'user-list__box__btm' do
              出品した商品-出品中
              = fa_icon 'angle-right side-bar'
          %li.user-list__box
            = link_to '/users/sale',class: 'user-list__box__btm' do
              出品した商品-取引中
              = fa_icon 'angle-right side-bar'
          %li.user-list__box
            = link_to '/users/trade',class: 'user-list__box__btm' do
              出品した商品-売却済み
              = fa_icon 'angle-right side-bar'
          %li.user-list__box
            = link_to '/users/transaction',class: 'user-list__box__btm' do
              購入した商品-取引中
              = fa_icon 'angle-right side-bar'
